#!/bin/sh
# showhelp
# show help for shelib-style inline document

showhelp(){
  # list subcommand description
  list_help_short(){
    for k in \
      '\*' \
      "-vE ^.+(\*|${SHELIB_HELP_MISC:+$SHELIB_HELP_MISC|}BREAK_OPT).*$" \
      "-E ^[^\\\*]+BREAK_OPT" ; do 
        list_help_core \
          | grep $k \
          | sed -r -e "s/(\)|\|).*//g" -e s/\#\#\.\+//g \
          | grep -vE "^[[:blank:]]*$" \
          | tr -d \\\ \
          | tr \\\n \\\| \
          | sed -r -e s/\\\|\ \*\$// \
          | sed -r -e s/\\\|-//g
    done | sed -r \
      -e "s/[[:alnum:]\*]-/&[/g" \
      -e "s/-\[/] [-/g" 
  }
  list_help_core(){
    : ${SHELIB_HELP_MISC:="MISC"} > /dev/null
    grep -EA100 \^\ \*\#$SHELIB_HELP_HEADER_CLASS `which $this` \
      | grep -EB100 \^\ \*\#$SHELIB_HELP_HEADER_CLASS \
      | grep -A100 case\ \\\$1 \
      | grep -B100 esac\ \*\$ \
      | grep -vE case\|esac \
      | grep -E "([[:blank:]]*[[:alnum:]]+\)|[[:blank:]]*##.+)" 
  }

  # generate help description from comment lines
  list_help_detail(){
    ## show help header
    echo $SHELIB_HELP_HEADER_CLASS | sed -r -e s/SHELIB_//g -e s/\$/:/ | tr A-Z a-z | tr -d \\\n
    ## show help body
    list_help_core \
      | sed -r -e s/\^/SOL/g \
               -e "s/SOL[[:blank:]]*##/\t##/g" \
      | tr -d \\\n \
      | sed -e s/SOL/\\\n/g \
      | tabfix \
      | grep -v ${SHELIB_HELP_MISC:-GOCHAS_SHELIB_HELPME_HOGE}
      echo;
  }

  chk_helpdoc_exist(){
    if list_help_core > /dev/null 2> /dev/null ; then return 0;
    else return 1; 
    fi
  }

  show_usage(){
    chk -e $1
    case $1 in
      SHELIB_OPTIONS|SHELIB_SUBCOMMANDS) : ;;
      *) return 0 ;;
    esac
    echo \ \ $this [`list_help_short`]
  }
  show_help_header(){
    echo ${this}${version:+-$version} 
    echo usage:; 
  }

  show_help_header
  for i in SHELIB_OPTIONS SHELIB_SUBCOMMANDS SHELIB_ARGS; do 
    SHELIB_HELP_HEADER_CLASS=$i; chk_helpdoc_exist && show_usage $SHELIB_HELP_HEADER_CLASS; done
  echo;
  test "$1" = "--short" || for i in SHELIB_OPTIONS SHELIB_SUBCOMMANDS SHELIB_ARGS; do 
    SHELIB_HELP_HEADER_CLASS=$i; chk_helpdoc_exist && list_help_detail ; done
}
